Screen {
    background: $background;
}

Header {
    dock: top;
}

Footer {
    dock: bottom;
}

#status-bar {
    dock: bottom;
    height: 1;
    color: $text-muted;
    background: $surface;
    padding: 0 1;
}

#filter-bar {
    height: 1;
    padding: 0 1;
    color: $text;
    background: $surface-lighten-1;
    text-style: bold;
}

#thread-title, #notif-title {
    text-style: bold;
    padding: 0 1;
    background: $surface-lighten-1;
    height: 1;
}
